#cloud-config

coreos:
  etcd:
      #discovery: https://discovery.etcd.io/XYZ
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=4243
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    - name: apt-cacher-service.service
      command: start
      runtime: no
      enable: true
      content: |
        [Unit]
        Description=Apt Cacher Service
        After=docker.service
        Requires=docker.service

        [Service]
        ExecStartPre=/var/lib/apt-cacher-service/apt-cacher-service build
        ExecStart=/var/lib/apt-cacher-service/apt-cacher-service run
        ExecStartPost=/usr/bin/etcdctl set /inaetics/apt-cacher-service $public_ipv4:3142
        ExecStopPost=/usr/bin/etcdctl rm /inaetics/apt-cacher-service
        TimeoutSec=600
        Restart=always

        [Install]
        WantedBy=multi-user.target
